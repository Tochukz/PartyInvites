@model PartyInvites.Models.GuestResponse
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Thanks</title>
    <meta name="viewport" content="width=device-width; initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div>
        <h1>Thank you @Model.Name!</h1>
        <p>
            @if(Model.WillAttend == true)
            {
                @: Its great that you are coming. The drinks are already in the fridge.

            }
            else
            {

                @: Sorry to hear that you can't make it. Thanks for letting us know.
            }
        </p>
        <p>Click <a asp-action="ListResponses" class="nav-link">here</a> to see who is coming.</p>
    </div>
</body>
</html>
